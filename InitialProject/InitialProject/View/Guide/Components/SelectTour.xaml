<UserControl x:Class="InitialProject.View.Guide.Components.SelectTour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.View.Guide.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Rectangle
            Grid.Row="0" 
            Fill="LightSteelBlue"
            Stroke="DarkGray" Grid.RowSpan="2"/>

        <Image
            VerticalAlignment="Center" 
            Source="{Binding ImagePath, ElementName=root}" 
            Height="125" 
            MouseLeftButtonDown="TrackTourLive_OnClick"
            Stretch="UniformToFill"
            StretchDirection="Both"/>

        <Label 
            Content="{Binding Title, ElementName=root}" 
            FontSize="17" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            MouseLeftButtonDown="TrackTourLive_OnClick"
            Margin="5,80,0,0" Grid.Row="1" Height="10" Width="10"/>

    </Grid>
</UserControl>
