<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyApp" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="_Home" Margin="5" Width="50" Height="30"/>
            <Button Content="_Search" Margin="5" Width="50"/>
            <Button Content="_Requests" Margin="5" Width="55"/>
            <Button Content="_Vouchers" Margin="5" Width="55"/>
            <Button Content="_Registered Tours" Margin="5" Width="100"/>
            <Button Content="_Sent Requests" Margin="5" Width="85"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="🔔" Margin="5" Background="#FFE2C018"/>
            <Button Content="?" Margin="5"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" >
            <TextBox TextWrapping="Wrap" Text="Tours in Offer" Margin="10,10,654,583"/>
        </Border>
    </Grid>
</Window>